# Application Settings
NEURACOLLAB_ENV=development
NEURACOLLAB_HOST=localhost
NEURACOLLAB_PORT=8000
NEURACOLLAB_LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///neuracollab.db
POSTGRES_USER=neuracollab
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=neuracollab

# AI Providers
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
OLLAMA_HOST=http://localhost:11434

# Frontend Settings
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Cache Settings
MAX_CACHE_SIZE_MB=500
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=0.7

# AWS Deployment (if using)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET=your-deployment-bucket
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-id

# Domain Settings
FRONTEND_DOMAIN=app.neuracollab.com
API_DOMAIN=api.neuracollab.com

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Development Tools
ENABLE_DEBUGGER=false
DEBUGGER_PORT=5678

    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "documents",
          "accept": ["text/*", ".txt", ".md"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
